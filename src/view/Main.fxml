                    </columns>
                </TableView>
                <Button fx:id="AddCustomerButton" layoutX="454.0" layoutY="230.0" mnemonicParsing="false" onAction="#onAddCustomerButtonAction" prefHeight="33.0" prefWidth="62.0" text="Add" />
                <Button fx:id="ModifyCustomerButton" layoutX="530.0" layoutY="230.0" mnemonicParsing="false" onAction="#onModifyCustomerButtonAction" prefHeight="33.0" prefWidth="62.0" text="Modify" />
