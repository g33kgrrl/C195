                        <TableColumn fx:id="apptUserIdCol" prefWidth="59.0" text="User ID" />
                        <TableColumn fx:id="apptContactIdCol" prefWidth="74.0" text="Contact ID" />
                    </columns>
                </TableView>
                <Button fx:id="AddAppointmentButton" layoutX="642.0" layoutY="230.0" mnemonicParsing="false" onAction="#onAddAppointmentButtonAction" prefHeight="33.0" prefWidth="62.0" text="Add" />
