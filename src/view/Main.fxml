                <Label layoutX="25.0" layoutY="22.0" text="Appointments">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <RadioButton fx:id="allRadio" layoutX="179.0" layoutY="26.0" mnemonicParsing="false" onAction="#onAllRadioAction" selected="true" text="All">
                    <toggleGroup>
                        <ToggleGroup fx:id="appointmentSelectionGroup" />
                    </toggleGroup></RadioButton>
                <RadioButton fx:id="weekRadio" layoutX="235.0" layoutY="26.0" mnemonicParsing="false" onAction="#onWeekRadioAction" text="Week" toggleGroup="$appointmentSelectionGroup" />
                <RadioButton fx:id="monthRadio" layoutX="297.0" layoutY="26.0" mnemonicParsing="false" onAction="#onMonthRadioAction" text="Month" toggleGroup="$appointmentSelectionGroup" />

