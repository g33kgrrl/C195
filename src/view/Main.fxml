                </Label>
            </children>
            <padding>
                <Insets bottom="6.0" right="12.0" />
            </padding>
        </Pane>
        <Pane layoutX="20.0" layoutY="310.0" style="-fx-border-style: solid; -fx-border-radius: 10px;" AnchorPane.topAnchor="305.0">
            <children>
                <TableView fx:id="AppointmentsTable" layoutX="14.0" layoutY="50.0" prefHeight="172.0" prefWidth="897.0">
                    <columns>
                        <TableColumn fx:id="apptIdCol" text="ID" />
                        <TableColumn fx:id="apptTitleCol" text="Title" />
                        <TableColumn fx:id="apptDescriptionCol" prefWidth="127.0" text="Description" />
                        <TableColumn fx:id="apptLocationCol" prefWidth="97.0" text="Location" />
                        <TableColumn fx:id="apptTypeCol" prefWidth="90.0" text="Type" />
